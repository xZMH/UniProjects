@model _77CarRental.Models.Reservation

@{
    ViewData["Title"] = "Add Reservation Details";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label">Customer</label>
                    <select asp-for="CustomerId" class="form-control" asp-items="@ViewBag.CustomerId"></select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarId" class="control-label">Car</label>
                    <select asp-for="CarId" class="form-control" asp-items="@ViewBag.CarId"></select>
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Start_Date" class="control-label">Start Date</label>
                    <input asp-for="Start_Date" type="date" class="form-control" />
                    <span asp-validation-for="Start_Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="End_Date" class="control-label">End Date</label>
                    <input asp-for="End_Date" type="date" class="form-control" />
                    <span asp-validation-for="End_Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReservationStatus" class="control-label">Reservation Status</label>
                    <input asp-for="ReservationStatus" class="form-control" />
                    <span asp-validation-for="ReservationStatus" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
            <a asp-action="Index" class="btn btn-default">Back to List</a>
        </div>
    </div>
</div>
