@model _77CarRental.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
}

<h1>@ViewData["Title"]</h1>

<div class="customer-details-container">
    <div class="customer-card">
        <div class="customer-card-header">
            <h2>Customer #@Model.CustomerId</h2>
        </div>
        <div class="customer-card-body">
            <div class="customer-info">
                <p><strong>First Name:</strong> @Model.FirstName</p>
                <p><strong>Last Name:</strong> @Model.LastName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.Phone</p>
                <!-- Add any additional fields here as needed -->
            </div>
        </div>
        <div class="customer-card-footer">
            <!-- You can add action buttons here if necessary, for example, Edit or Delete -->
            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.CustomerId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this customer?');">Delete</a>

        </div>
    </div>
</div>
