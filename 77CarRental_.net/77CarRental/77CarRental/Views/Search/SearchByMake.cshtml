<h1>Search By Car Make</h1>

<form id="searchForm" method="get">
    <select id="Make" asp-items="ViewBag.makeList">
        <option value="0">Select a Car Make</option>
    </select>
    <button type="button" class="btn btn-primary" id="btnSearch">Search</button>
</form>

<div id="searchResults">
</div>

<script type="text/javascript">

    $(document).ready(function() {
        $("#btnSearch").click(function() {
            //get CategoryID value of the selected item in the select list
            var searchVal = $("#Make").val();
            /*call Action and pass the Cateogry ID of the select list*/
            $("#searchResults").load("@Url.Action("CarByMake")", { CarMake: searchVal });
        });
    });
</script>