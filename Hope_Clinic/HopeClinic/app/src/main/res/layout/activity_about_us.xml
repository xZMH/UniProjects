<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginVertical="20dp"
            app:srcCompat="@drawable/logoname" />

        <TextView
            android:id="@+id/Welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/senbold"
            android:gravity="center_horizontal"
            android:text="About Us"
            android:textColor="@color/primary"
            android:textSize="27dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/senbold"
            android:gravity="center"
            android:text="In 2016, we are proud to have established the largest clinic in the UAE built on our founding principles of advocating for healthy protection, for all UAE residents â€“ a guiding principle which we embrace from the teachings of Sheikh Zayed Al Nahyan, the founding father of the UAE and an early champion of environmental protection."
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/senbold"
            android:text="You Can find our socials Below click on the logo"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:layout_weight="0.3">

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="50dp"
                android:src="@drawable/twitterlogo" />

            <ImageView
                android:id="@+id/url_instagram"
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="50dp"
                android:clickable="true"
                android:src="@drawable/instalogo" />

            <ImageView
                android:id="@+id/snap"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="50dp"
                android:src="@drawable/snapchatagain" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        app:srcCompat="@drawable/grass" />

</RelativeLayout>