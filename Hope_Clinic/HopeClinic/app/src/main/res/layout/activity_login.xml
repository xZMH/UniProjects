<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="209dp"
        android:layout_height="194dp"
        android:layout_weight="4"
        android:alpha="0.43"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/half_circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:clickable="true"
            android:minWidth="48dp"
            app:srcCompat="@drawable/arrow_back"
            android:onClick="OnArrowBackClick"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="Go back"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/senbold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/senbold"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etLoginEmail"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="250dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/senbold"
            android:hint="Email"
            android:inputType="text|textEmailAddress"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:textColorHint="#1B8000" />

        <EditText
            android:id="@+id/etLoginPass"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:fontFamily="@font/senbold"
            android:drawablePadding="12dp"
            android:hint="Password"
            android:paddingStart="12dp"
            android:background="@drawable/custom_input"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#1B8000"
            tools:ignore="SpeakableTextPresentCheck" />

        <CheckBox
            android:id="@+id/chk_box"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/senbold"
            android:minHeight="48dp"
            android:text="Remember Me" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:background="@drawable/button_gradient"
            android:fontFamily="@font/senbold"
            android:text="Login"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/tvRegisterHere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/senbold"
            android:gravity="center"
            android:text="Don't have account? Register Now"
            android:textColor="#1B8000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvForgetPass"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/senbold"
            android:gravity="center"
            android:text="Forget Password?"
            android:onClick="onForgetPassClick"
            android:textColor="#1B8000"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="555dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/grass" />

</RelativeLayout>